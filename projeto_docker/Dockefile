# Use a imagem do Nginx
FROM nginx:1.27-alpine3.20-slim

# Defina o diretório de trabalho
WORKDIR /app

# Copie o arquivo de configuração do Nginx
COPY nginx.config /etc/nginx/nginx.conf

# Copie os arquivos HTML para o diretório do Nginx
COPY index_green.html /usr/share/nginx/html/index.html   # Para web1
# Para web2, altere o nome do arquivo HTML
# COPY index_orange.html /usr/share/nginx/html/index.html
# Para web3, altere o nome do arquivo HTML
# COPY index_darkgreen.html /usr/share/nginx/html/index.html
